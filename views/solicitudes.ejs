                        <% datosUsuarios.forEach(datosUsuario => { %>
                            <option value="<%= datosUsuario.idUsuario %>"><%= datosUsuario.nombreCompleto %></option>
                        <% })  %>
                        <% }%>
                    </select>
                </div>
            </div>
            <div class="mb-3">
                <label for="areaformacion" class="form-label">Área de formación</label>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="..." name="areaFormacion" id="areaFormacion" aria-describedby="basic-addon3 basic-addon4">
                </div>
            </div>

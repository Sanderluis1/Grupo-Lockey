<!-- Modal de Capacitación-->
<div class="modal fade" id="ModalCapacitacion" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Solicitud de capacitación</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/solicitudes/capacitacion" method="post" class="formsWithMessage">
          <div class="modal-body">
            <div class="messageSolicitud"></div>
            <div class="mb-3">
                <label for="dirigido" class="form-label">Dirigido a</label>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1"><i class="bi bi-people-fill"></i></span>
                    <select class="form-select" name="dirigidoA[]" id="multiple-select-clear-field" data-placeholder="Selecciona el trabajador(es)" multiple="multiple">

                <div class="form-text" id="basic-addon4"><span class="character-counter">0</span>/100</div>
            </div>
            <div class="mb-3">
                <label for="tipoCapacitacion" class="form-label">Tipo de capacitación</label>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1"><i class="bi bi-card-checklist"></i></span>
                    <input type="text" class="form-control" name="tipoCapacitacion" aria-label="tipoCapitacion" aria-describedby="basic-addon1">
                </div>
            </div>
